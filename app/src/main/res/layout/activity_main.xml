<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_left" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_tight" />

    <TextView
        android:id="@+id/textView2"
        android:letterSpacing="0.05"
        android:fontFamily="@font/poppins_bold"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/blue"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="LOGIN "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="0sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginHorizontal="32sp"
        android:layout_height="wrap_content"
        android:ems="100"
        android:layout_marginTop="32dp"
        android:inputType="text"
        android:drawableStart="@drawable/name"
        android:background="@drawable/input_text_background"
        android:drawablePadding="16dp"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/reg_no_input"
        android:layout_width="0sp"
        android:layout_marginHorizontal="32sp"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:fontFamily="@font/poppins_medium"
        android:ems="10"
        android:layout_marginTop="32dp"
        android:inputType="text"
        android:background="@drawable/input_text_background"

        android:drawableStart="@drawable/password"
        android:hint="Registration No."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:elevation="45sp"
        android:translationZ="10dp"
        android:letterSpacing="0.09"
        android:layout_marginHorizontal="32sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"
        android:layout_marginTop="32sp"
        android:backgroundTint="@color/purple_700"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_no_input" />
</androidx.constraintlayout.widget.ConstraintLayout>